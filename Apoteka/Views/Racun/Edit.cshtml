@model Apoteka.ViewModels.RacunVM

@{
    ViewBag.Title = "Uređivanje računa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Uređivanje računa</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Hidden("RacunId", Model.RacunId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DatumIvrijemeIzdavanja, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DatumIvrijemeIzdavanja, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local" } })
            @Html.ValidationMessageFor(model => model.DatumIvrijemeIzdavanja, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.KorisnikNaziv, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.KorisnikNaziv, ViewBag.Korisnici as SelectList)
            @Html.ValidationMessageFor(model => model.KorisnikNaziv, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.KlijentNaziv, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.KorisnikNaziv, ViewBag.Klijenti as SelectList)
            @Html.ValidationMessageFor(model => model.KlijentNaziv, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Spremi" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Natrag na prikaz", "Index")
</div>

    @Scripts.Render("~/bundles/jqueryval")

