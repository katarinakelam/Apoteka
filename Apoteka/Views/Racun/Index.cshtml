@model IEnumerable<Apoteka.ViewModels.RacunVM>

@{
    ViewBag.Title = "Prikaz računa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Prikaz računa</h2>

<p>
    @Html.ActionLink("Stvori", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DatumIvrijemeIzdavanja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KorisnikNaziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KlijentNaziv)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DatumIvrijemeIzdavanja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KorisnikNaziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KlijentNaziv)
            </td>
            <td>
                @Html.ActionLink("Uredi", "Edit", new { id = item.RacunId }) |
                @Html.ActionLink("Izbriši", "Delete", new { id = item.RacunId })
            </td>
        </tr>
    }

</table>
